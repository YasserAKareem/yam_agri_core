{
  "doctype": "DocType",
  "name": "Observation Threshold Policy",
  "module": "YAM Agri Core",
  "custom": 1,
  "autoname": "naming_series:",
  "title_field": "policy_name",
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Naming Series",
      "options": "YAM-OTP-.YYYY.-",
      "default": "YAM-OTP-.YYYY.-"
    },
    {
      "fieldname": "policy_name",
      "fieldtype": "Data",
      "label": "Policy Name",
      "reqd": 1
    },
    {
      "fieldname": "site",
      "fieldtype": "Link",
      "options": "Site",
      "label": "Site",
      "reqd": 1
    },
    {
      "fieldname": "observation_type",
      "fieldtype": "Data",
      "label": "Observation Type",
      "description": "Use '*' as wildcard for all observation types",
      "reqd": 1
    },
    {
      "fieldname": "warning_min",
      "fieldtype": "Float",
      "label": "Warning Min"
    },
    {
      "fieldname": "warning_max",
      "fieldtype": "Float",
      "label": "Warning Max"
    },
    {
      "fieldname": "critical_min",
      "fieldtype": "Float",
      "label": "Critical Min"
    },
    {
      "fieldname": "critical_max",
      "fieldtype": "Float",
      "label": "Critical Max"
    },
    {
      "fieldname": "active",
      "fieldtype": "Check",
      "label": "Active",
      "default": 1
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 0
    },
    {
      "role": "QA Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 0
    }
  ]
}
