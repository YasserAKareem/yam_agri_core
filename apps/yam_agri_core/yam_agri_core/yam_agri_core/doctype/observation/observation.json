{
  "doctype": "DocType",
  "name": "Observation",
  "module": "YAM Agri Core",
  "custom": 1,
  "autoname": "naming_series:",
  "title_field": "observation_type",
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Naming Series",
      "options": "YAM-OBS-.YYYY.-",
      "default": "YAM-OBS-.YYYY.-"
    },
    {"fieldname": "site", "fieldtype": "Link", "options": "Site", "label": "Site", "reqd": 1},
    {"fieldname": "device", "fieldtype": "Link", "options": "Device", "label": "Device"},
    {"fieldname": "observed_at", "fieldtype": "Datetime", "label": "Observed At"},
    {"fieldname": "observation_type", "fieldtype": "Data", "label": "Observation Type"},
    {"fieldname": "value", "fieldtype": "Float", "label": "Value"},
    {"fieldname": "unit", "fieldtype": "Data", "label": "Unit"},
    {
      "fieldname": "quality_flag",
      "fieldtype": "Select",
      "options": "OK\nQuarantine\nInvalid",
      "label": "Quality Flag"
    },
    {"fieldname": "raw_payload", "fieldtype": "Long Text", "label": "Raw Payload"},
    {"fieldname": "notes", "fieldtype": "Small Text", "label": "Notes"}
  ],
  "permissions": [
    {"role": "System Manager", "read": 1, "write": 1, "create": 1, "delete": 0},
    {"role": "QA Manager", "read": 1, "write": 1, "create": 1, "delete": 0}
  ]
}
