{
  "doctype": "DocType",
  "name": "Device",
  "module": "YAM Agri Core",
  "custom": 1,
  "autoname": "naming_series:",
  "title_field": "device_name",
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Naming Series",
      "options": "YAM-DEV-.YYYY.-",
      "default": "YAM-DEV-.YYYY.-"
    },
    {"fieldname": "device_name", "fieldtype": "Data", "label": "Device Name"},
    {"fieldname": "site", "fieldtype": "Link", "options": "Site", "label": "Site", "reqd": 1},
    {
      "fieldname": "device_type",
      "fieldtype": "Select",
      "options": "Scale\nTemperature Sensor\nHumidity Sensor\nOther",
      "label": "Device Type"
    },
    {"fieldname": "serial_number", "fieldtype": "Data", "label": "Serial Number"},
    {"fieldname": "model", "fieldtype": "Data", "label": "Model"},
    {"fieldname": "status", "fieldtype": "Select", "options": "Active\nInactive", "label": "Status"},
    {"fieldname": "notes", "fieldtype": "Small Text", "label": "Notes"}
  ],
  "permissions": [
    {"role": "System Manager", "read": 1, "write": 1, "create": 1, "delete": 0},
    {"role": "QA Manager", "read": 1, "write": 1, "create": 1, "delete": 0}
  ]
}
