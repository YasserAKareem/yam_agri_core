{
  "doctype": "DocType",
  "name": "EvidencePack",
  "module": "YAM Agri Core",
  "custom": 1,
  "autoname": "naming_series:",
  "title_field": "title",
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Naming Series",
      "options": "YAM-EP-.YYYY.-",
      "default": "YAM-EP-.YYYY.-"
    },
    {
      "fieldname": "title",
      "fieldtype": "Data",
      "label": "Title",
      "reqd": 1
    },
    {
      "fieldname": "site",
      "fieldtype": "Link",
      "options": "Site",
      "label": "Site",
      "reqd": 1
    },
    {
      "fieldname": "lot",
      "fieldtype": "Link",
      "options": "Lot",
      "label": "Lot"
    },
    {
      "fieldname": "from_date",
      "fieldtype": "Date",
      "label": "From Date",
      "reqd": 1
    },
    {
      "fieldname": "to_date",
      "fieldtype": "Date",
      "label": "To Date",
      "reqd": 1
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "options": "Draft\nReady\nSent\nPrepared\nApproved\nRejected",
      "label": "Status",
      "default": "Draft",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    },
    {
      "fieldname": "approved_ai_narrative",
      "fieldtype": "Long Text",
      "label": "Approved AI Narrative"
    },
    {
      "fieldname": "generation_section",
      "fieldtype": "Section Break",
      "label": "Generation"
    },
    {
      "fieldname": "generated_at",
      "fieldtype": "Datetime",
      "label": "Generated At",
      "read_only": 1
    },
    {
      "fieldname": "generated_by",
      "fieldtype": "Link",
      "options": "User",
      "label": "Generated By",
      "read_only": 1
    },
    {
      "fieldname": "record_count",
      "fieldtype": "Int",
      "label": "Linked Record Count",
      "default": 0,
      "read_only": 1
    },
    {
      "fieldname": "file_column_break",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "pdf_file",
      "fieldtype": "Attach",
      "label": "PDF Export",
      "read_only": 1
    },
    {
      "fieldname": "zip_file",
      "fieldtype": "Attach",
      "label": "ZIP Export",
      "read_only": 1
    },
    {
      "fieldname": "linked_documents_section",
      "fieldtype": "Section Break",
      "label": "Linked Documents"
    },
    {
      "fieldname": "linked_documents",
      "fieldtype": "Table",
      "label": "Linked Documents",
      "options": "EvidencePack Linked Document"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 0
    },
    {
      "role": "QA Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 0
    }
  ]
}
